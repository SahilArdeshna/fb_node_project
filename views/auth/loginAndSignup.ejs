<body>
    <body>
        <div id="header_wrapper">
            <div id="header">
                <li id="sitename"><a href="<%= appUrl %>">fb</a></li>
                <form action="/login" method="POST">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <li>Email or Phone<br><input type="text" name="email"></li>
                    <li>Password<br><input type="password" name="password"></li>
                    <li><input type="submit" name="login" value="Log In"></li>
                </form>
            </div>
        </div>
        <div id="wrapper">
            <div id="div1">
                <p>FB helps you connect and share with the <br>people in your life.</p>
                    <img src="/images/fb_map_image.png">
            </div>
            <div id="div2">
                <% if (errorMessage) { %>
                    <div class="user-message user-message--error"><%= errorMessage %></div>
                <% } %>
                <h1>Create an account</h1>
                <p>It's free and always will be.</p>
                <form action="/signup" method="POST" class="signup-form">
                    <div class="name-info">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <input type="text" name="firstname" value="<%= oldInput.firstname %>" placeholder="First Name" id="firstname">
                        <input type="text" name="surname" value="<%= oldInput.surname %>" placeholder="Surname" id="surname">
                    </div>
                    <div>
                        <input type="email" name="email" value="<%= oldInput.email %>" placeholder="Email address">
                    </div>                    
                    <div>
                        <input type="password" name="password" value="<%= oldInput.password %>" placeholder="New password">
                    </div>
